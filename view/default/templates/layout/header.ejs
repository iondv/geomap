<header id="header">

	<span class="logo pull-left">
	  <a href="/"><img src="<%=module%>/<%- logo || 'img/logo_framework.png'%>" alt="admin panel" height="40"></a>
	</span>

  <nav>
    <% include top-menu %>

    <ul class="nav pull-right">
      <!-- USER OPTIONS -->
      <% if (typeof user !== 'undefined' && user && user.id() !== 'anonymous') { %>
      <li class="dropdown pull-left">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
          <%let avatar = user.properties().avatar;%>
          <%if (avatar) {%>
          <img class="user-avatar" src="<%=avatar.link%>" height="34" alt="<%=__('User avatar')%>"/>
          <%}%>
          <span class="user-name">
            <span class="hidden-xs"><%=typeof user !== 'undefined' ? (user.name() || user.id()) : '-'%>
              <i class="fa fa-angle-down"></i></span>
          </span>
        </a>
        <ul class="dropdown-menu hold-on-click">
          <li>
            <a href="<%=module%>/sign-out"><i class="fa fa-power-off"></i> <%=__('Logout')%></a>
          </li>
        </ul>
      </li>
      <% } %>
    </ul>
  </nav>

</header>
